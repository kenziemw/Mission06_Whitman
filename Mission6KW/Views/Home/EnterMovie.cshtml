@model Mission6KW.Models.Movie

<h2>Add a Movie</h2>

<!-- ✅ Form for adding or updating a movie -->
<form asp-action="SaveMovie" method="post">

    <!-- ✅ Movie Title Input -->
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span> <!-- Displays validation message -->
    </div>

    <!-- ✅ Year Input (Must be 1888 or later) -->
    <div class="form-group">
        <label>Year</label>
        <input asp-for="Year" type="number" min="1888" class="form-control" required />
        <span asp-validation-for="Year" class="text-danger"></span> <!-- Displays validation message -->
    </div>

    <!-- ✅ Director Name Input -->
    <div class="form-group">
        <label>Director</label>
        <input asp-for="Director" class="form-control" />
    </div>

    <!-- ✅ Movie Rating Dropdown -->
    <div class="form-group">
        <label>Rating</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NC-17">NC-17</option>
        </select>
    </div>

    <!-- ✅ Edited Status Dropdown (Required) -->
    <div class="form-group">
        <label>Edited</label>
        <select asp-for="Edited" class="form-control" required>
            <option value="">-- Select --</option> <!-- Forces user to make a selection -->
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span> <!-- Displays validation message -->
    </div>

    <!-- ✅ Copied to Plex Dropdown (Required) -->
    <div class="form-group">
        <label>Copied to Plex</label>
        <select asp-for="CopiedToPlex" class="form-control" required>
            <option value="">-- Select --</option> <!-- Forces user to make a selection -->
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span> <!-- Displays validation message -->
    </div>

    <!-- ✅ Lent To Input -->
    <div class="form-group">
        <label>Lent To</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <!-- ✅ Notes Input (Textarea for additional comments) -->
    <div class="form-group">
        <label>Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <!-- ✅ Submit Button -->
    <button type="submit" class="btn btn-primary">Submit New Movie Information</button>
</form>

<!-- ✅ Include client-side validation scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
